{
  "package": {
    "productName": "Project Pulse HE",
    "version": "1.0.0"
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": false,
        "scope": [
          "whatsapp://*",
          "https://wa.me/*",
          "https://mail.google.com/*",
          "mailto:*",
          "tel:*"
        ]
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeFile": true,
        "removeDir": true,
        "renameFile": true,
        "exists": true,
        "scope": ["$APPDATA", "$DOWNLOAD", "$DOCUMENT", "$DESKTOP", "$HOME"]
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "globalShortcut": {
        "all": false
      },
      "os": {
        "all": false
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$APPDATA", "$RESOURCE"]
      }
    },
    "bundle": {
      "active": true,
      "targets": ["dmg", "app"],
      "identifier": "com.projectpulse.he",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png", 
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.13",
        "entitlements": null,
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "dmg": {
          "appPosition": {
            "x": 180,
            "y": 170
          },
          "applicationFolderPosition": {
            "x": 480,
            "y": 170
          },
          "windowSize": {
            "width": 660,
            "height": 400
          }
        }
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Project Pulse HE",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "focus": true
      }
    ]
  }
}
