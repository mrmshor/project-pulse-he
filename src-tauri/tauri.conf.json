{
  "productName": "מנהל פרויקטים Pro",
  "version": "1.0.0",
  "identifier": "com.company.projectmanager",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [{
      "title": "מנהל פרויקטים Pro",
      "width": 1200,
      "height": 800,
      "minWidth": 800,
      "minHeight": 600
    }]
  },
  "plugins": {
    "dialog": { "all": true },
    "shell": { "all": false, "open": true },
    "fs": { "all": true }
  }
}