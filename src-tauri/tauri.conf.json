{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Project Pulse HE",
  "mainBinaryName": "Project Pulse HE",
  "version": "1.0.0",
  "identifier": "com.projectpulse.he",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Project Pulse HE",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": false,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true,
      "scope": [
        "$APPDATA",
        "$APPDATA/*",
        "$DOCUMENT",
        "$DOCUMENT/*",
        "$DESKTOP",
        "$DESKTOP/*",
        "$DOWNLOAD",
        "$DOWNLOAD/*"
      ]
    },
    "shell": {
      "all": false,
      "execute": true,
      "sidecar": true,
      "open": "https://shell.tauri.app/v1/",
      "scope": [
        {
          "name": "open-folder",
          "cmd": "open",
          "args": [
            {
              "validator": "\\S+"
            }
          ]
        },
        {
          "name": "open-whatsapp",
          "cmd": "open",
          "args": [
            "-a",
            "WhatsApp",
            {
              "validator": "whatsapp://.*"
            }
          ]
        },
        {
          "name": "open-url",
          "cmd": "open",
          "args": [
            {
              "validator": "https?://.*"
            }
          ]
        }
      ]
    },
    "opener": {
      "all": false,
      "openUrl": true
    },
    "notification": {
      "all": true,
      "requestPermission": true,
      "isPermissionGranted": true,
      "sendNotification": true,
      "show": true,
      "cancel": true,
      "cancelAll": true
    }
  }
}
