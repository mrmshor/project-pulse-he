{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Project Pulse HE",
  "version": "1.0.0",
  "identifier": "com.projectpulse.manager",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Project Pulse HE - מנהל פרויקטים מתקדם",
        "width": 1200,
        "height": 800,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "longDescription": "Advanced project and task management system in Hebrew",
    "shortDescription": "Project management tool"
  }
}
