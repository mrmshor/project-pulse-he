{
  "productName": "Project Pulse HE",
  "version": "1.0.0",
  "identifier": "com.projectpulse.manager",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Project Pulse HE",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ]
  },
  "plugins": {
    "dialog": {
      "enable": true
    },
    "fs": {
      "enable": true,
      "scope": ["$APPDATA/**", "$DOCUMENT/**", "$HOME/Documents/**"]
    },
    "shell": {
      "enable": true,
      "open": {
        "enable": true
      }
    },
    "opener": {
      "enable": true
    },
    "notification": {
      "enable": true
    }
  },
  "bundle": {
    "active": true,
    "category": "ProductivityApp",
    "copyright": "",
    "externalBin": [],
    "longDescription": "",
    "resources": [],
    "shortDescription": "",
    "targets": "all"
  }
}
