{
  "$schema": "https://tauri.app/schema/config/2.0",
  "productName": "Project Pulse HE",
  "version": "1.0.0",
  "identifier": "com.project.pulse.he",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Project Pulse HE - מנהל פרויקטים מתקדם",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' data: blob: https: tauri: http://localhost:*; img-src 'self' data: blob: https:; style-src 'self' 'unsafe-inline';"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Project Manager Team",
    "copyright": "Copyright © 2024 Project Manager Team",
    "category": "Productivity",
    "shortDescription": "Advanced Project Management System in Hebrew",
    "longDescription": "Project Pulse HE is an advanced project management system with full Hebrew support, task tracking, analytics, and WhatsApp integration.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "entitlements": null,
      "signingIdentity": null,
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "fs": {
      "all": true,
      "copyFile": true,
      "create": true,
      "exists": true,
      "readDir": true,
      "readFile": true,
      "remove": true,
      "rename": true,
      "stat": true,
      "writeFile": true,
      "mkdir": true
    },
    "opener": {
      "all": true,
      "openUrl": true,
      "openPath": true
    },
    "shell": {
      "all": true,
      "execute": true,
      "sidecar": true,
      "open": true
    },
    "notification": {
      "all": true
    }
  }
}
