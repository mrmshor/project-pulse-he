{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "", 
    "devPath": "../dist",
    "distDir": "../dist"
  },
  "package": {
    "productName": "project-manager-pro",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.app"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "project-manager-pro",
        "width": 800,
        "height": 600
      }
    ]
  }
}